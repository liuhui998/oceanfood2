<div class="page-header">
  <%= link_to new_food_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Food
  <% end %>
  <h1>Listing foods</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Memo</th>


			<th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @foods) do |food| %>
            <td>
			  <%= link_to food do %>
				<%= image_tag food.image.thumb.url %>
			  <% end %>
			</td>
            <td><%= food.name %></td>
            <td><%= food.price %></td>
            <td><%= food.memo %></td>

			<td>
			  <%= link_to  edit_food_path(food) , :class => "btn btn-default" do %>
				<span class="glyphicon glyphicon-pencil"></span>
				Edit
			  <% end %>
			  &nbsp;&nbsp;
			  <%= link_to  food, method: :delete, data: { confirm: 'Are you sure?' }   , :class => "btn btn-danger" do %>
			    <span class="glyphicon glyphicon-remove-circle"></span>
			    Destroy
			  <% end %>
			</td>
      <% end %>
    </tbody>
  </table>
</div>
